#include <stdio.h>
int main(){

    char ch ;
    printf("enter the character");
    scanf("%c" , &ch);
     
    //check the vowel using OR (||)

    if(ch == 'A' || ch == 'a' ||
    ch == 'E' || ch =='e' ||
    ch == 'I' || ch == 'i' ||
    ch == 'O' || ch == 'o' ||
    ch == 'U' || ch == 'u' )
    {
        printf("%c is a vowel", ch);
    }
// check the consonant using AND (&&)
  else if( (ch >= 'A' && ch <= 'Z') ||
(ch >= 'a' && ch <= 'z'))
{
printf("%c is a consonant" , ch);
}
else 
{
    printf("%c is not an alphabet", ch);
}


 
    return 0;
}